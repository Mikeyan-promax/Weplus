# 该文件为示例，请勿在公开仓库提交真实密钥或凭据

# 数据库配置（示例：Railway 提供的 Postgres）
DATABASE_URL=postgresql://USER:PASS@HOST:5432/DBNAME
DB_HOST=HOST
DB_PORT=5432
DB_NAME=DBNAME
DB_USER=USER
DB_PASSWORD=PASS

# DeepSeek API 配置
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 豆包嵌入模型配置（火山引擎 ARK）
ARK_API_KEY=your_ark_api_key
ARK_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
ARK_EMBEDDING_MODEL=doubao-embedding-text-240715

# 应用运行配置
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=False

# 向量配置
VECTOR_DIMENSION=1536
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 文件上传配置
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=[".pdf",".txt",".docx",".md",".html"]
UPLOAD_DIR=./uploads

# 邮件服务配置
MAIL_USERNAME=service@example.com
MAIL_PASSWORD=strong_password
MAIL_FROM=service@example.com
MAIL_PORT=465
MAIL_SERVER=smtp.example.com
MAIL_FROM_NAME=WePlus校园助手
MAIL_STARTTLS=False
MAIL_SSL_TLS=True
MAIL_USE_CREDENTIALS=True
MAIL_VALIDATE_CERTS=True

# Redis 配置
REDIS_URL=redis://localhost:6379

# JWT 安全配置
SECRET_KEY=please_change_this_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# 管理后台 API 安全模式开关
ADMIN_API_SAFE_MODE=true

# 跨域与管理员白名单（建议在平台上设置，避免代码里写死）
ALLOWED_ORIGINS=["https://your-domain.up.railway.app"]
ADMIN_IP_WHITELIST=[]

